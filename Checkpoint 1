import math                                                                     #Checkpoint 1 calculating the radius and surface area of a sphere from its radius


volume = float(input("Enter volume of sphere : ")) 
r =((3*volume)/(4*math.pi)) **(1/3)
print("The radius of the sphere is " + str(r*0.001) + " m")


a = 4*math.pi*(r)**2
print("The surface area of the sphere is " + str(0.000001*a) + " m^2")
